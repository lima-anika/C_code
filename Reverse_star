/* Online C Compiler and Editor */
#include <stdio.h>

int main()
{
    
    int n,k;
    
    scanf("%d",&n);
    
    int star=(2*n)-1;
    
    int space=0;
    
    for(int i=1;i<=n;i++)
    {
        for(int k=1;k<=space;k++)
        {
            
            printf(" ");
        }
        
        
        for(int k=1;k<=star;k++)
        {
            printf("*");
        }
        
        star-=2;
        
        space+=1;
         printf("\n");
    }

    return 0;
}
